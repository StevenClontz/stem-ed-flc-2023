                              \draw[step=1cm,gray!50,very thin] (-.5,-7.5) grid (6.5,7.5);
                              %axes
                              \draw[very thick,->] (0,0) -- (6,0) node[anchor=north west] {\tiny$x$};
                              \draw[very thick,->] (0,-7) -- (0,7) node[anchor=south east] {\tiny$y$};
